<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <a asp-action="@nameof(HomeController.CreateCourse)" asp-controller="@nameof(HomeController).CutController()"
                class="btn btn-primary float-end">Добавить курс</a>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Название курса</th>
                        <th>Описание</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody id="courseTable">
                    <!-- Example row -->
                    <tr>
                        <td>1</td>
                        <td>Example Course</td>
                        <td>Example Description</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Редактировать</button>
                            <button class="btn btn-sm btn-danger">Удалить</button>
                        </td>
                    </tr>
                    <!-- @* Your dynamic rows will be here *@ -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Bootstrap JS and Popper.js -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>