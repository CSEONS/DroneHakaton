<script>
    // Вопросы для теста
    var questions = [
        {
            question: "Что такое БАС?",
            answers: ["Беспилотная авиационная система", "Базовая авиационная станция", "Беспилотная авиастанция"],
            correctAnswer: 0
        },
        {
            question: "Каковы основные компоненты БАС?",
            answers: ["Двигатель, шасси, крылья", "Камера, управление, аккумулятор", "Все вышеперечисленное"],
            correctAnswer: 2
        },
        {
            question: "Какая максимальная высота полета БАС без специального разрешения?",
            answers: ["100 метров", "120 метров", "150 метров"],
            correctAnswer: 1
        }
    ];
    var currentQuestionIndex = 0;
    var correctAnswers = 0;

    function loadNextQuestion() {
        var questionContainer = document.getElementById("questionContainer");
        var nextQuestionBtn = document.getElementById("nextQuestionBtn");

        if (currentQuestionIndex < questions.length) {
            var q = questions[currentQuestionIndex];
            questionContainer.innerHTML = `
                        <p><strong>Вопрос ${currentQuestionIndex + 1}:</strong> ${q.question}</p>
                        <ul class="list-group">
                            ${q.answers.map((answer, index) => `
                                <li class="list-group-item" onclick="selectAnswer(${index})">${answer}</li>
                            `).join('')}
                        </ul>
                    `;
            nextQuestionBtn.style.display = "none";
        } else {
            questionContainer.innerHTML = `<p id="resultMessage">Вы ответили правильно на ${correctAnswers} из ${questions.length} вопросов.</p>`;
            nextQuestionBtn.style.display = "none";
        }
    }

    function selectAnswer(selectedIndex) {
        var q = questions[currentQuestionIndex];
        if (selectedIndex === q.correctAnswer) {
            correctAnswers++;
        }
        currentQuestionIndex++;
        document.getElementById("nextQuestionBtn").style.display = "block";
    }

    // Инициализация
    loadNextQuestion();
</script>